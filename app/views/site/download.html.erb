<% content_for :title, "LearnWords - Download" %>
<% content_for :meta, "Download LearnWords application. Available on two platforms
 Mac OS X and Windows. Free." %>
<div class="download jumbotron">
	<div class="container">
		<h1 class="title">LearnWords</h1>
		<div class="row">
			<div class="col-md-1 col-sm-0 col-lg-1"></div>
			<div class="col-md-5 col-sm-0 col-lg-5 left hidden-xs">
				<img src="/assets/product.png" />
			</div>
			<div class="col-md-1 col-sm-0 col-lg-1"></div>
			<div class="col-md-4 col-sm-12 col-lg-4 right">
				<div class="downloadDescription">
					<ul>
						<li>Easy to Use</li>
						<li>New Words Everyday</li>
						<li>Just a Few Mintues Per Day</li>
						<li>No Need of Connection to the Internet</li>
					</ul>
				</div>
				<div class="downloadButtons">
					<%= link_to "Download | Windows 7", download_app_win_path, id: "download_win" %>
					<%= link_to "Download | Mac OS X", download_app_mac_path, id: "download_mac" %>
				</div>
				<div class="downloadedTimes">
					<p>Learnwords downloaded <%= @stat.downloads %> times!</p>
				</div>
			</div>
			<div class="col-md-1 col-sm-0 col-lg-1"></div>
		</div>
	</div>
</div>
