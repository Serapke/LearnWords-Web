<%= form_for(@duk) do |f| %>
  <% if @duk.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @duk.errors.full_messages.each do |message| %>
        <li class="error"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :query %>
    <%= f.text_area(:query, size: "2x2")  %>
  </div>
  <div class="field">
    <%= f.label :answer %>
    <%= f.text_area(:answer, size: "5x5", maxlength: 600) %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", class: "submit" %>
  </div>
<% end %>
