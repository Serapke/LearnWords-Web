<section class="duk_page">
	<div class="container">
		<h1>D.U.K</h1>
		<div class="duks">
			<% @duks.each do |duk| %>
				<div class="duk center col-md-3">
					<% if current_admin %>

						<%= link_to image_tag("delete_duk"), duk, method: :delete, class: "duk_buttons"%>
						<%= link_to image_tag("edit_duk"), edit_duk_path(duk), class: "duk_buttons" %>
					<% end %>
					<h3 class="query"><%= duk.query %></h3>
					<h6 class="answer"><%= duk.answer %></h6>
				</div>
			<% end %>
		</div>
	</div>
</section>
