<section class="team">
	<div class="container">
		<h1>Our Team</h1>
		<div class="members">
			<% @team_members.each do |team_member| %>
				<div class="team_member center">
					<%= image_tag(team_member.image) %>
					<h3 class="name"><%= team_member.name %></h3>
					<h6 class="job_title"><%= team_member.job_title %></h6>
					<p class="quote hidden-xs"><%= team_member.quote %></p>
				</div>
			<% end %>
			<div class="no-right-border team_member center add_new">
				<%= link_to image_tag("add_team_member.png"), new_team_member_path, class: "add_member_link" %>
				<h3 class="name">Add New Member</h3>
				<h6 class="job_title"></h6>
			</div>
		</div>
	</div>
</section>
